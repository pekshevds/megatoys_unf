	ВидОтчета = ВидОтчетаИзПоказателя(Показатель);
	
	Если ВидОтчета = ПредопределенноеЗначение("Перечисление.ВидыФинансовыхОтчетов.ДоходыРасходы") Тогда
		ДеревоПоказателей = ДеревоПоказателейДоходыРасходы;
