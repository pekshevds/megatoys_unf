&НаКлиенте
Процедура ОбновитьДанныеУЗависимыхПоказателей(Показатель, Период, СтрокиТаблицы = Неопределено, СуммаПоказателя = Неопределено)

	СоответствиеСвязанныхПоказателей = СвязанныеПоказатели.Получить(Показатель);
	
	Если СоответствиеСвязанныхПоказателей = Неопределено Тогда
		Возврат;
	КонецЕсли;
	
	Для Каждого СвязанныйПоказатель Из СоответствиеСвязанныхПоказателей Цикл
		СтрокаДерева = ПолучитьСтрокуДереваПоПоказателю(СвязанныйПоказатель.Ключ);
		ВременноеЗначениеОтчета = ВыбранныйОтчет;
		Если ЗначениеЗаполнено(СтрокаДерева.ТипСчета) Тогда
			ВыбранныйОтчет = ПредопределенноеЗначение("Перечисление.ВидыФинансовыхОтчетов.ДоходыРасходы");
			СтруктураОтбора = Новый Структура("Счет, ДатаПланирования", СтрокаДерева.ИсточникДанных, Период);
		Иначе
			ВыбранныйОтчет = ПредопределенноеЗначение("Перечисление.ВидыФинансовыхОтчетов.ДенежныйПоток");
			СтруктураОтбора = Новый Структура("Статья, ДатаПланирования", СтрокаДерева.ИсточникДанных, Период);
		КонецЕсли;
		ТабличнаяЧасть = ОпределитьТабличнуюЧастьДокумента(СтрокаДерева);
		ВыбранныйОтчет = ВременноеЗначениеОтчета;
		
		СтрокиПослеОтбора = ТабличнаяЧасть.НайтиСтроки(СтруктураОтбора);
		СтрокаБазовая = Неопределено;
		Сумма = 0;
		ИмяКолонки = СформироватьИмяКолонкиПоПериоду(Период);
		Если ИзмененныеПоказатели.НайтиПоЗначению(СвязанныйПоказатель.Ключ)= Неопределено Тогда
			ИзмененныеПоказатели.Добавить(СвязанныйПоказатель.Ключ);
		КонецЕсли;
		
		Если СтрокиПослеОтбора.Количество() = 0 Тогда
			ВременноеЗначениеОтчета = ВыбранныйОтчет;
			Если ЗначениеЗаполнено(СтрокаДерева.ТипСчета) Тогда
				ВыбранныйОтчет = ПредопределенноеЗначение("Перечисление.ВидыФинансовыхОтчетов.ДоходыРасходы");
				ОбновитьДанныеВТаблицахДоходыРасходы(СтрокаДерева,Период,1);
			Иначе
				ВыбранныйОтчет = ПредопределенноеЗначение("Перечисление.ВидыФинансовыхОтчетов.ДенежныйПоток");
				ОбновитьДанныеВТаблицахДенежныйПоток(СтрокаДерева,Период,1);
			КонецЕсли;
			ТабличнаяЧасть = ОпределитьТабличнуюЧастьДокумента(СтрокаДерева);
			СтрокиПослеОтбора = ТабличнаяЧасть.НайтиСтроки(СтруктураОтбора);
			ВыбранныйОтчет = ВременноеЗначениеОтчета;
		КонецЕсли;
		
		Если ЗначениеЗаполнено(СтрокиТаблицы) Тогда
			Для каждого Строка Из СтрокиПослеОтбора Цикл
				ТабличнаяЧасть.Удалить(Строка);
				СтрокаБазовая = Строка;
			КонецЦикла;
			Для каждого СтруктураСтроки Из СтрокиТаблицы Цикл
				НоваяСтрока = ТабличнаяЧасть.Добавить();
				ЗаполнитьЗначенияСвойств(НоваяСтрока, СтруктураСтроки);
				НоваяСтрока.Счет = СтрокаБазовая.Счет;
				Если НоваяСтрока.Свойство("Статья") Тогда
					НоваяСтрока.Статья = СтрокаДерева.ИсточникДанных;
				КонецЕсли;
				НоваяСтрока.КоррСчет = СтрокаБазовая.КоррСчет;
				НоваяСтрока.Комментарий = СтрокаБазовая.Комментарий;
				НоваяСтрока.Сумма = НоваяСтрока.Сумма * СвязанныйПоказатель.Значение;
				Если СтрокаДерева.ТипСчета = ПредопределенноеЗначение("Перечисление.ТипыСчетов.СебестоимостьПродаж") Тогда
					НоваяСтрока.НаправлениеДеятельности = ПредопределенноеЗначение("Справочник.НаправленияДеятельности.ОсновноеНаправление");
				КонецЕсли;
				Сумма = Сумма + НоваяСтрока.Сумма;
			КонецЦикла;
		Иначе
			СтрокаБазовогоДерева = ПолучитьСтрокуДереваПоПоказателю(Показатель);
			ВременноеЗначениеОтчета = ВыбранныйОтчет;
			Если ЗначениеЗаполнено(СтрокаБазовогоДерева.ТипСчета) Тогда
				ВыбранныйОтчет = ПредопределенноеЗначение("Перечисление.ВидыФинансовыхОтчетов.ДоходыРасходы");
				СтруктураОтбораБазовая = Новый Структура("Счет, ДатаПланирования", СтрокаБазовогоДерева.ИсточникДанных, Период);
			Иначе
				ВыбранныйОтчет = ПредопределенноеЗначение("Перечисление.ВидыФинансовыхОтчетов.ДенежныйПоток");
				СтруктураОтбораБазовая = Новый Структура("Статья, ДатаПланирования", СтрокаБазовогоДерева.ИсточникДанных, Период);
			КонецЕсли;
			ТабличнаяЧастьБазовая = ОпределитьТабличнуюЧастьДокумента(СтрокаБазовогоДерева);
			ВыбранныйОтчет = ВременноеЗначениеОтчета;
			СтрокиПослеОтбораБазовые = ТабличнаяЧастьБазовая.НайтиСтроки(СтруктураОтбораБазовая);
			Если СтрокиПослеОтбораБазовые.Количество() = 0 И СуммаПоказателя <> 0 Тогда
				ОбновитьДанныеВТаблицахДоходыРасходы(СтрокаБазовогоДерева,Период,1);
				ТабличнаяЧастьБазовая = ОпределитьТабличнуюЧастьДокумента(СтрокаБазовогоДерева);
				СтрокиПослеОтбораБазовые = ТабличнаяЧастьБазовая.НайтиСтроки(СтруктураОтбораБазовая);
			КонецЕсли;
			БазоваяСтрока = СтрокиПослеОтбора[0];
			Для каждого Строка Из СтрокиПослеОтбора Цикл
				ТабличнаяЧасть.Удалить(Строка);
			КонецЦикла;
			Для Каждого СтрокаОтбора Из СтрокиПослеОтбораБазовые Цикл
				Если СуммаПоказателя <> 0 Тогда
					НоваяСтрока = ТабличнаяЧасть.Добавить();
					ЗаполнитьЗначенияСвойств(НоваяСтрока, СтрокаОтбора);
					НоваяСтрока.Счет = БазоваяСтрока.Счет;
					Если НоваяСтрока.Свойство("Статья") Тогда
						НоваяСтрока.Статья = СтрокаДерева.ИсточникДанных;
					КонецЕсли;
					НоваяСтрока.КоррСчет = БазоваяСтрока.КоррСчет;
					НоваяСтрока.Комментарий = БазоваяСтрока.Комментарий;
					НоваяСтрока.Сумма = НоваяСтрока.Сумма * СвязанныйПоказатель.Значение;
					Если СтрокаДерева.ТипСчета = ПредопределенноеЗначение("Перечисление.ТипыСчетов.СебестоимостьПродаж") Тогда
						НоваяСтрока.НаправлениеДеятельности = ПредопределенноеЗначение("Справочник.НаправленияДеятельности.ОсновноеНаправление");
					КонецЕсли;
					Сумма = Сумма + НоваяСтрока.Сумма;
				КонецЕсли;
			КонецЦикла
		КонецЕсли;
		
		ВременноеЗначениеОтчета = ВыбранныйОтчет;
		Если ЗначениеЗаполнено(СтрокаДерева.ТипСчета) Тогда
			ВыбранныйОтчет = ПредопределенноеЗначение("Перечисление.ВидыФинансовыхОтчетов.ДоходыРасходы");
		Иначе
			ВыбранныйОтчет = ПредопределенноеЗначение("Перечисление.ВидыФинансовыхОтчетов.ДенежныйПоток");
		КонецЕсли;
		СтрокаДерева[ИмяКолонки] = Сумма;
		ОбновитьИтогиРекурсивноВверхПоИерархии(СтрокаДерева, ИмяКолонки);
		ОбновитьКолонкуИтого(СтрокаДерева);
		ОбновитьЗависимыеЭлементыПоФормуле(СтрокаДерева.ИдентификаторПоказателя, ИмяКолонки);
		ВыбранныйОтчет = ВременноеЗначениеОтчета;
		Элементы.ПересчетПоказателей.Видимость = Истина;
		Модифицированность = Истина;
		
	КонецЦикла;
	
КонецПроцедуры

