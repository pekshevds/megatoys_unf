&НаСервереБезКонтекста
Процедура СписокПриПолученииДанныхНаСервере(ИмяЭлемента, Настройки, Строки)
	
	Для Каждого Строка Из Строки Цикл
		Строка = Строки[Строка.Ключ];
		Если Строка.Оформление.Получить("Сотрудники") = Неопределено Тогда
			Возврат;
		КонецЕсли;
		Прервать;
	КонецЦикла;

	Ключи = Строки.ПолучитьКлючи();
	Ссылки = Новый Массив;
	Для Каждого Ключ Из Ключи Цикл
		Ссылки.Добавить(Ключ.Ссылка);
	КонецЦикла;

	СотрудникиСоответствие = Новый Соответствие;

	Запрос = Новый Запрос;
	Запрос.Текст =
	"ВЫБРАТЬ
	|	ОтработанноеВремя.Ссылка КАК ДокументСсылка,
	|	ОтработанноеВремя.Сотрудник.Наименование КАК Сотрудник
	|ИЗ
	|	Документ.ЕжедневныйОтчет.ОтработанноеВремя КАК ОтработанноеВремя
	|ГДЕ
	|	ОтработанноеВремя.Ссылка В(&Ссылки)
	|
	|УПОРЯДОЧИТЬ ПО
	|	ОтработанноеВремя.НомерСтроки";
	Запрос.УстановитьПараметр("Ссылки", Ссылки);

	Выборка = Запрос.Выполнить().Выбрать();
	Пока Выборка.Следующий() Цикл
		Если СотрудникиСоответствие[Выборка.ДокументСсылка] = Неопределено Тогда
			СотрудникиСоответствие[Выборка.ДокументСсылка] = Новый Массив;
		КонецЕсли;
		СотрудникиСоответствие[Выборка.ДокументСсылка].Добавить(Выборка.Сотрудник);
	КонецЦикла;

	Для Каждого Строка Из Строки Цикл
		Строка = Строки[Строка.Ключ];
		Если СотрудникиСоответствие[Строка.Данные["Ссылка"]] = Неопределено Тогда
			Строка.Данные["Сотрудники"] = НСтр("ru = '<Сотрудники не заполнены>'");
			Строка.Оформление["Сотрудники"].УстановитьЗначениеПараметра("ЦветТекста", ЦветаСтиля.ТекстЗапрещеннойЯчейкиЦвет);
		Иначе
			Строка.Данные["Сотрудники"] = СтрСоединить(СотрудникиСоответствие[Строка.Данные["Ссылка"]], ", ");
		КонецЕсли;

	КонецЦикла;
	
КонецПроцедуры

