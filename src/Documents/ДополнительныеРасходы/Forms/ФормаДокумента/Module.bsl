	ПараметрыДиалога.Вставить("БылиВнесеныИзменения", Ложь);
	Если ПередаватьВидДокумента Тогда
		ПараметрыДиалога.Вставить("ВидДокумента", НСтр("ru = 'дополнительные расходы'"));
	КонецЕсли;	
	
	ПараметрыДиалога.Вставить("ПоказыватьКолонкуСодержаниеВДополнительныхРасходахРасходы",
		ПоказыватьКолонкуСодержаниеВДополнительныхРасходахРасходы);
		
	ОткрытьФорму("ОбщаяФорма.ШапкаТабличнаяЧасть", ПараметрыДиалога, , , , ,
	Новый ОписаниеОповещения("ШапкаТабличнаяЧастьЗавершение", ЭтотОбъект));
	

