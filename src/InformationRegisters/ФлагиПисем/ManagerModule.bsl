Функция ФлагиПисьма(Событие) Экспорт
	
	Запрос = Новый Запрос;
	Запрос.Текст = 
	"ВЫБРАТЬ
	|	ФлагиПисем.Непрочитанное КАК Непрочитанное
	|ИЗ
	|	РегистрСведений.ФлагиПисем КАК ФлагиПисем
	|ГДЕ
	|	ФлагиПисем.Событие = &Событие";
	Запрос.УстановитьПараметр("Событие", Событие);
	
	ФлагиПисьма = Новый Структура;
	ФлагиПисьма.Вставить("Непрочитанное", Ложь);
	
	РезультатЗапроса = Запрос.Выполнить();
	Если РезультатЗапроса.Пустой() Тогда
		Возврат ФлагиПисьма;
	КонецЕсли;
	
	Выборка = РезультатЗапроса.Выбрать();
	Если Выборка.Следующий() Тогда
		ЗаполнитьЗначенияСвойств(ФлагиПисьма, Выборка);
	КонецЕсли;
	
	Возврат ФлагиПисьма;
	
КонецФункции

Процедура ИзменитьФлагиПисьма(УчетнаяЗапись, Событие, ФлагиПисьма, ЗагрузкаПочты = Ложь) Экспорт
	
	ФлагиПисьмаСтруктура = КонвертироватьФлагПрочитанное(ФлагиПисьма);
	ОбновляемыеФлагиПисьма = УдалитьНеОбновляемыеФлагиИзСтруктуры(ФлагиПисьмаСтруктура);
	
	МенеджерЗаписи = РегистрыСведений.ФлагиПисем.СоздатьМенеджерЗаписи();
	МенеджерЗаписи.УчетнаяЗапись = УчетнаяЗапись;
	МенеджерЗаписи.Событие = Событие;
	МенеджерЗаписи.Прочитать();
	Если Не МенеджерЗаписи.Выбран() Тогда
		МенеджерЗаписи.УчетнаяЗапись = УчетнаяЗапись;
		МенеджерЗаписи.Событие = Событие;
	КонецЕсли;
	ЗаполнитьЗначенияСвойств(МенеджерЗаписи, ОбновляемыеФлагиПисьма);
	Если МенеджерЗаписи.Непрочитанное = Ложь
		И МенеджерЗаписи.Помеченное = Истина Тогда
		МенеджерЗаписи.Удалить();
	Иначе
		МенеджерЗаписи.Записать(Истина);
	КонецЕсли;
	
	Если Не ЗагрузкаПочты Тогда
		НоваяЗапись = РегистрыСведений.ДействияСПисьмами.СоздатьМенеджерЗаписи();
		НоваяЗапись.УчетнаяЗапись = УчетнаяЗапись;
		НоваяЗапись.Событие = Событие;
		НоваяЗапись.Действие = Перечисления.ДействияСПисьмом.УстановкаФлага;
		НоваяЗапись.Записать(Истина);
	КонецЕсли;
	
КонецПроцедуры

Процедура ИзменитьФлагиПисем(УчетнаяЗапись, ФлагиПисем, ЗагрузкаПочты = Ложь) Экспорт
	
	СтрокиКУдалению = СтрокиСПустымиФлагами(ФлагиПисем);
	Для каждого Строка Из СтрокиКУдалению Цикл
		ФлагиПисем.Удалить(Строка);
	КонецЦикла;
	
	НаборЗаписей = РегистрыСведений.ФлагиПисем.СоздатьНаборЗаписей();
	НаборЗаписей.Отбор.УчетнаяЗапись.Установить(УчетнаяЗапись);
	НаборЗаписей.Загрузить(ФлагиПисем);
	НаборЗаписей.Записать(Истина);
	
	Если Не ЗагрузкаПочты Тогда
		Для каждого ОписаниеФлагов Из ФлагиПисем Цикл
			НоваяЗапись = РегистрыСведений.ДействияСПисьмами.СоздатьМенеджерЗаписи();
			НоваяЗапись.УчетнаяЗапись = УчетнаяЗапись;
			НоваяЗапись.Событие = ОписаниеФлагов.Событие;
			НоваяЗапись.Действие = Перечисления.ДействияСПисьмом.УстановкаФлага;
			НоваяЗапись.Записать(Истина);
		КонецЦикла;
	КонецЕсли;
	
КонецПроцедуры

