Функция ОбъединитьПути(Путь1, Путь2, Путь3 = Неопределено) Экспорт
	
	РазделительПути = "\";
	
	МассивПутей = Новый Массив();
	МассивПутей.Добавить(Путь1);
	МассивПутей.Добавить(Путь2);
	МассивПутей.Добавить(Путь3);
	
	МассивПутейИтоговый = Новый Массив();
	
