	ИмяТаблицы = ОписаниеТаблицы.ИмяТаблицы;
	
	МаксимальноеЧислоПоказателей = Форма.МаксимальноеКоличествоПоказателей;
	Показатели                   = Форма.ОписаниеПоказателей.МассивПоказателей;
	СоответствиеПоказателей      = Форма.ОписаниеПоказателей.СоответствиеПоказателей;
	
	Для Каждого СтрокаНачислений Из СтрокиНачислений Цикл
		// Инициализируем поля показателей и их значений.
		Для СчетчикПоказателей = 1 По МаксимальноеЧислоПоказателей Цикл
			СтрокаНачислений["Показатель" + СчетчикПоказателей] = "";
			СтрокаНачислений["ТочностьПоказателя" + СчетчикПоказателей] = 0;
			СтрокаНачислений["ПредставлениеПоказателя" + СчетчикПоказателей] = Неопределено;
			СтрокаНачислений["Значение" + СчетчикПоказателей] = Неопределено;
		КонецЦикла;
		
		МаксимальноеЧислоПоказателей = МаксимальноеЧислоПоказателей;
		
		СчетчикПоказателей = 1;
		Для Каждого СтрокаПоказателя Из Показатели Цикл
			СтрокаНачислений["Показатель" + СчетчикПоказателей] 			= СтрокаПоказателя;
			СтрокаНачислений["ТочностьПоказателя" + СчетчикПоказателей] 	= 2;
			
			СтрокаНачислений["ПредставлениеПоказателя" + СчетчикПоказателей]= СоответствиеПоказателей.СтрокаПоказателя;
			СчетчикПоказателей = СчетчикПоказателей + 1;
		КонецЦикла;
		
	КонецЦикла;
	
