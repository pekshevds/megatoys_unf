#Область ПрограммныйИнтерфейс

// Предназначена для внесения изменений в форму Обслуживание обработки
// ПанельАдминистрированияБСП без снятия формы с поддержки.
//
// Параметры:
//  Форма - ФормаКлиентскогоПриложения - для внесения изменений.
//
Процедура ОбслуживаниеПриСозданииНаСервере(Форма) Экспорт
	
	Перем ВыбранныйРаздел;	
	
	// РезервноеКопированиеИВосстановление
	Если Форма.Параметры.Свойство("Раздел", ВыбранныйРаздел) Тогда 
		
		Для Каждого ГруппаЭлементов Из Форма.ПодчиненныеЭлементы Цикл
			
			Если ГруппаЭлементов.Имя = "Группа" + ВыбранныйРаздел Тогда

				ГруппаЭлементов.Показать();
				
			Иначе
				
				ГруппаЭлементов.Видимость = Ложь;
				
				Если ТипЗнч(ГруппаЭлементов) = Тип("ГруппаФормы") Тогда
					ГруппаЭлементов.Поведение = ПоведениеОбычнойГруппы.Обычное;
				КонецЕсли;
				
			КонецЕсли;
			
		КонецЦикла;
		
	КонецЕсли;
	
КонецПроцедуры

#КонецОбласти