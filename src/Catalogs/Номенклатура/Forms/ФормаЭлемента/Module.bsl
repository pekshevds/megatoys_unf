Функция ЦветВидаЦен(ВидЦен)
	
	Строки = ЦветаВидовЦен.НайтиСтроки(Новый Структура("ВидЦен", ВидЦен));
	Если Строки.Количество() <> 0 Тогда
		Возврат Строки[0].Цвет;
	КонецЕсли;
	
	ИндексЦвета = 0;
	
	КоличествоСтрок = ЦветаВидовЦен.Количество();
	НоваяСтрока = ЦветаВидовЦен.Добавить();
	НоваяСтрока.ВидЦен = ВидЦен;
	
	ЦветаСерий = ЦветаВидовЦен();
	
	Если КоличествоСтрок < 10 Тогда
		ИндексЦвета = КоличествоСтрок;
	ИначеЕсли КоличествоСтрок - Цел(КоличествоСтрок/10)*10 = 0 Тогда
		ИндексЦвета = 0;
	ИначеЕсли КоличествоСтрок < 100 Тогда
		ИндексЦвета = КоличествоСтрок - Цел(КоличествоСтрок/10)*10;
	Иначе
		Возврат Неопределено;
	КонецЕсли;
	
	НоваяСтрока.Цвет = ЦветаСерий[ИндексЦвета];
	
	Возврат НоваяСтрока.Цвет;
	
КонецФункции

